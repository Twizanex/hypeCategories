{
	"name": "hypejunction/hypecategories",
	"type": "elgg-plugin",
	"repository": "hypeJunction/hypeCategories",
	"description": "Categories for Elgg",
	"homepage": "http://hypejunction.com",
	"minimum-stability": "stable",
	"keywords": [
		"elgg", "plugin", "categories", "taxonomy"
	],
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Ismayil Khayredinov",
			"email": "ismayil.khayredinov@gmail.com"
		}
	],
	"extra": {
		"installer-name": "hypeCategories"
	},
	"require": {
		"php": ">=5.4",
		"ext-json": "*",
		"ext-xml": "*",
		"ext-curl": "*",
		"composer/installers": "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "4.*",
		"elgg/sniffs": "dev-master",
		"squizlabs/php_codesniffer": "1.5.*"
	},
	"autoload": {
		"psr-0": {
			"": "classes/"
		}
	},
	"autoload-dev": {
		"psr-0": {
			"": "tests/phpunit/"
		}
	}
}

